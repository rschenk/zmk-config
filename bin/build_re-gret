west build \
  --pristine \
  --board seeeduino_xiao_ble \
  -- \
  -DSHIELD="re-gret rgbled_adapter" \
  -DZMK_CONFIG="/workspaces/zmk-config/config" \
  -DZMK_EXTRA_MODULES="/workspaces/zmk-modules/zmk-keyboard-re-gret;/workspaces/zmk-modules/zmk-tri-state;/workspaces/zmk-modules/zmk-rgbled-widget;/workspaces/zmk-modules/zmk-auto-layer"

